#!/bin/sh
# Compile and run a C program
# $1 = filename
# $2 = extension (unused)

cp "$1" main.c
gcc -o main $GCC_ARGS main.c > /dev/null || exit 1
timeout -s KILL "$KAMELI_TIMELIMIT" s6-softlimit -a "$KAMELI_MEMLIMIT" -f "$KAMELI_FILELIMIT" -p "$KAMELI_PROCESSLIMIT" ./main
ECODE=$?
killall -9 -u "$(whoami)" > /dev/null &
exit $ECODE
