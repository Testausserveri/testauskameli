#!/bin/sh
# Compile and run an Idris2 program
# $1 = filename
# $2 = extension (unused)

cp "$1" main.idr

idris2 main.idr -o main > /dev/null || exit 1
timeout -s KILL "$KAMELI_TIMELIMIT" s6-softlimit -a "$KAMELI_MEMLIMIT" -f "$KAMELI_FILELIMIT" -p "$KAMELI_PROCESSLIMIT" ./build/exec/main
ECODE=$?
killall -9 -u "$(whoami)" > /dev/null
exit $ECODE
